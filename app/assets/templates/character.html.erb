<h1>The Character View!</h1>
<ul>
  <li ng-repeat="foo in bars">
    {{foo}}
  </li>
</ul>


<div>
  <form class="form-horizontal" role="form" ng-submit="loadPilotData()">
    <div class="col-sm-2">
      <select data-ng-model="selectedPilot" class="form-control selected_cap" ng-change="choosePilot()">
        <option value="default">Select A Capsuleer</option>
        <option ng-repeat="char in $root.accountProfile.characters">{{char.character_name}}</option>
      </select>
    </div>

    <div class="col-sm-2">
      <button type="submit" class="btn btn-default">Load</button>
    </div>

    <div class="col-sm-2">
      <pre>{{accountProfile.characters[selectedPilot]}}</pre>
    </div>
  </form>
</div>


